                                }
                            }

                            @if (Model.Count != 0 && Model.Any(model => model.ActaAlta != null))
                            @*@if (Model.Count != 0 && Model.Any(model => model.ActaAlta != 0))*@
                            {
                                @Html.TextArea("quienes firmaron sus legajos el día ");
