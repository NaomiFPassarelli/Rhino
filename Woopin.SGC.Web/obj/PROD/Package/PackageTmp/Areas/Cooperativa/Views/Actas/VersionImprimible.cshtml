                            <div class="titulo" style="text-align:center; text-transform:uppercase; padding-top: 50px; padding-bottom: 40px; font-weight:bold; text-decoration:underline;">
                                ACTA NÚMERO @Html.DisplayFor(model => model.First().ActaAlta)
