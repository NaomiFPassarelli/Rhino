                <div class="col-md-6">
                    @Html.Label("Nro de Acta de Alta", new { @class = "col-md-12 horizontal-label" })
                    @Html.TextBoxFor(model => model.ActaAlta, new { @class = "textinput" })
                </div>

                <div class="col-md-6">
                    @Html.LabelFor(model => model.Presidente, new { @class = "col-md-12 horizontal-label" })
