    <script @*src="~/Scripts/jquery-1.8.2.js"*@ type="text/javascript">
        $(document).ready(function () {

            //$('#submitButton').click(function () { alert('click');});
            //$('#submitButton').bind('click', function () { alert('click'); });
            //$('#submitButton').on('click', function () { alert('click'); });

            $('#submitButton').bind('click', function () {
                var params = {
                    url: '@Url.Action("EnviarMensaje")',
                    data: {
                        emailContacto: $('#email').val(),
                        telefonoContacto: $('#phone').val(),
                        nombreContacto: $('#name').val(),
                        mensajeContacto: $('#message').val()
                    },
                    success: function (ret) {
                        $('#email').val("");
                        $('#phone').val("");
                        $('#name').val("");
                        $('#message').val("");
                    }
                }
                $.AjaxPost(params);
            });
        });
    </script>


