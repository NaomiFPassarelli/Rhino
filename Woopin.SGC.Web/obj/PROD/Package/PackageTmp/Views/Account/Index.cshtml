                                    <input type="text" class="form-control" placeholder="Nombre *" id="name" required="" data-validation-required-message="Por favor ingresá tú nombre." style="padding: 3%; font-size: 14px; height: auto;">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control" placeholder="Email *" id="email" required="" data-validation-required-message="Por favor ingresá tú email." style="padding: 3%; font-size: 14px; height: auto;">
